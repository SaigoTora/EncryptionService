@{
	ViewData["Title"] = "Home Page";
}

<div class="container py-5">
	<h1 class="display-4 text-center">Welcome</h1>
	<p class="lead mb-5 text-center">This site allows you to encrypt data in various ways.</p>

	<div class="accordion" id="encryptionAccordion">
		<div class="accordion-item">
			<h2 class="accordion-header" id="headingOne">
				<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne" tabindex="-1">
					Symmetric encryption. Using transposition ciphers.
				</button>
			</h2>
			<div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#encryptionAccordion">
				<div class="accordion-body">
					<ul class="list-group list-group-flush">
						<li class="list-group-item">
							<a asp-controller="BlockTransposition" asp-action="Index">
								1.1 Block transposition
							</a>
						</li>
						<li class="list-group-item">
							<a asp-controller="VerticalTransposition" asp-action="Index">
								1.2 Vertical transposition
							</a>
						</li>
						<li class="list-group-item">
							<a asp-controller="EquivalentTransposition" asp-action="Index">
								1.3 Equivalent transposition
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>

		<div class="accordion-item">
			<h2 class="accordion-header" id="headingTwo">
				<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo" tabindex="-1">
					Symmetric encryption. Using substitution ciphers.
				</button>
			</h2>
			<div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#encryptionAccordion">
				<div class="accordion-body">
					<ul class="list-group list-group-flush">
						<li class="list-group-item">
							<a asp-controller="SloganEncryption" asp-action="Index">
								2.1 Slogan encryption
							</a>
						</li>
						<li class="list-group-item">
							<a asp-controller="PlayfairEncryption" asp-action="Index">
								2.2 Playfair encryption
							</a>
						</li>
						<li class="list-group-item">
							<a asp-controller="HomophonicEncryption" asp-action="Index">
								2.3 Homophonic encryption
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>

		<div class="accordion-item">
			<h2 class="accordion-header" id="headingThree">
				<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree" tabindex="-1">
					Symmetric encryption. Use of gamification ciphers (additive ciphers). Use of pseudorandom sequence generators.
				</button>
			</h2>
			<div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#encryptionAccordion">
				<div class="accordion-body">
					<ul class="list-group list-group-flush">
						<li class="list-group-item">
							<a asp-controller="XorEncryption" asp-action="Index">
								3.1 XOR encryption
							</a>
						</li>
						<li class="list-group-item">
							<a asp-controller="IcgGenerator" asp-action="Index">
								3.2 Inverse Congruential Generator
							</a>
						</li>
						<li class="list-group-item">
							<a asp-controller="LfsrGenerator" asp-action="Index">
								3.3 Linear Feedback Shift Register Generator
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>

		<div class="accordion-item">
			<h2 class="accordion-header" id="headingFour">
				<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour" tabindex="-1">
					Asymmetric encryption.
				</button>
			</h2>
			<div id="collapseFour" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#encryptionAccordion">
				<div class="accordion-body">
					<ul class="list-group list-group-flush">
						<li class="list-group-item">
							<a asp-controller="RsaEncryption" asp-action="Index">
								4.1 RSA encryption
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div>
