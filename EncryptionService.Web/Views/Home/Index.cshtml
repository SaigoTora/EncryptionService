@{
	ViewData["Title"] = "Home Page";
}

<div class="container py-5">
	<h1 class="display-4 text-center">Welcome</h1>
	<p class="lead mb-5 text-center">This site allows you to encrypt data in various ways.</p>

	<div class="accordion" id="encryptionAccordion">
		<div class="accordion-item">
			<h2 class="accordion-header" id="heading1">
				<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse1" aria-expanded="true" aria-controls="collapse1" tabindex="-1">
					Symmetric encryption. Using transposition ciphers.
				</button>
			</h2>
			<div id="collapse1" class="accordion-collapse collapse show" aria-labelledby="heading1" data-bs-parent="#encryptionAccordion">
				<div class="accordion-body">
					<ul class="list-group list-group-flush">
						<li class="list-group-item">
							<a asp-controller="BlockTransposition" asp-action="Index">
								1.1 Block transposition
							</a>
						</li>
						<li class="list-group-item">
							<a asp-controller="VerticalTransposition" asp-action="Index">
								1.2 Vertical transposition
							</a>
						</li>
						<li class="list-group-item">
							<a asp-controller="EquivalentTransposition" asp-action="Index">
								1.3 Equivalent transposition
							</a>
						</li>
					</ul>
				</div>
			</div>

			<div class="accordion-item">
				<h2 class="accordion-header" id="heading2">
					<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2" aria-expanded="false" aria-controls="collapse2" tabindex="-1">
						Symmetric encryption. Using substitution ciphers.
					</button>
				</h2>
				<div id="collapse2" class="accordion-collapse collapse" aria-labelledby="heading2" data-bs-parent="#encryptionAccordion">
					<div class="accordion-body">
						<ul class="list-group list-group-flush">
							<li class="list-group-item">
								<a asp-controller="SloganEncryption" asp-action="Index">
									2.1 Slogan encryption
								</a>
							</li>
							<li class="list-group-item">
								<a asp-controller="PlayfairEncryption" asp-action="Index">
									2.2 Playfair encryption
								</a>
							</li>
							<li class="list-group-item">
								<a asp-controller="HomophonicEncryption" asp-action="Index">
									2.3 Homophonic encryption
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<div class="accordion-item">
				<h2 class="accordion-header" id="heading3">
					<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse3" aria-expanded="false" aria-controls="collapse3" tabindex="-1">
						Symmetric encryption. Use of gamification ciphers (additive ciphers). Use of pseudorandom sequence generators.
					</button>
				</h2>
				<div id="collapse3" class="accordion-collapse collapse" aria-labelledby="heading3" data-bs-parent="#encryptionAccordion">
					<div class="accordion-body">
						<ul class="list-group list-group-flush">
							<li class="list-group-item">
								<a asp-controller="XorEncryption" asp-action="Index">
									3.1 XOR encryption
								</a>
							</li>
							<li class="list-group-item">
								<a asp-controller="IcgGenerator" asp-action="Index">
									3.2 Inverse Congruential Generator
								</a>
							</li>
							<li class="list-group-item">
								<a asp-controller="LfsrGenerator" asp-action="Index">
									3.3 Linear Feedback Shift Register Generator
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<div class="accordion-item">
				<h2 class="accordion-header" id="heading4">
					<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse4" aria-expanded="false" aria-controls="collapse4" tabindex="-1">
						Asymmetric encryption.
					</button>
				</h2>
				<div id="collapse4" class="accordion-collapse collapse" aria-labelledby="heading4" data-bs-parent="#encryptionAccordion">
					<div class="accordion-body">
						<ul class="list-group list-group-flush">
							<li class="list-group-item">
								<a asp-controller="RsaEncryption" asp-action="Index">
									4.1 RSA encryption
								</a>
							</li>
							<li class="list-group-item">
								<a asp-controller="KnapsackEncryption" asp-action="Index">
									4.2 Knapsack encryption
								</a>
							</li>
							<li class="list-group-item">
								<a asp-controller="ElGamalEncryption" asp-action="Index">
									4.3 El Gamal encryption
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>

			<div class="accordion-item">
				<h2 class="accordion-header" id="heading5">
					<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse5" aria-expanded="false" aria-controls="collapse5" tabindex="-1">
						Hashing.
					</button>
				</h2>
				<div id="collapse5" class="accordion-collapse collapse" aria-labelledby="heading5" data-bs-parent="#encryptionAccordion">
					<div class="accordion-body">
						<ul class="list-group list-group-flush">
							<li class="list-group-item">
								<a asp-controller="Hashing" asp-action="Index">
									5.1 Hashing. Hash functions
								</a>
							</li>
							<li class="list-group-item">
								<a asp-controller="RsaSignature" asp-action="Index">
									5.2 Hashing. Electronic digital signature using RSA algorithm
								</a>
							</li>
							<li class="list-group-item">
								<a asp-controller="ElGamalSignature" asp-action="Index">
									5.2 Hashing. Electronic digital signature using El Gamal algorithm
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>
